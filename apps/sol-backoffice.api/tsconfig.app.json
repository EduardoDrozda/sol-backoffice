{
  "extends": "../../tsconfig.base.json",
      "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "target": "es2021",
      "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@application/*": ["application/*"],
      "@domain/*": ["domain/*"],
      "@common/*": ["common/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ]
}
